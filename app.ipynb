#Blurry Image Application
import cv2
import os
import shutil

def calculate_blur_score(image_path):
    """
    Computes the focus measure using the Variance of Laplacian method.
    """
    # Load the image in grayscale
    image = cv2.imread(image_path)
    if image is None:
        return 0
    
    gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)
    
    # Apply the Laplacian operator to find edges
    # The variance of these edges tells us how 'sharp' the image is
    laplacian_var = cv2.Laplacian(gray, cv2.CV_64F).var()
    return laplacian_var

def cull_blurry_images(source_folder, threshold=110.0):
    """
    Scans a folder and moves blurry images to a subfolder.
    """
    # Create a destination folder for blurry images
    destination_folder = os.path.join(source_folder, "blurry_backup")
    if not os.path.exists(destination_folder):
        os.makedirs(destination_folder)

    extensions = ('.jpg', '.jpeg', '.png', '.bmp')
    count = 0
    
    print(f"üîç Scanning {source_folder} for blurry photos...")
    
    for filename in os.listdir(source_folder):
        if filename.lower().endswith(extensions):
            file_path = os.path.join(source_folder, filename)
            
            # Calculate the blur score
            score = calculate_blur_score(file_path)
            
            # If score is below threshold, it's blurry
            if score < threshold:
                print(f"‚ùå Blurry: {filename} (Score: {score:.2f})")
                shutil.move(file_path, os.path.join(destination_folder, filename))
                count += 1
            else:
                print(f"‚úÖ Sharp:  {filename} (Score: {score:.2f})")

    print(f"\n‚ú® Done! Moved {count} blurry images to '{destination_folder}'.")

# --- EXECUTION ---
# Path to your photo directory
my_photos = "/content/drive/MyDrive/images" 

# Note: 100 is a standard threshold. 
# If it's too aggressive, lower it to 60. If it misses blurs, raise it to 150.
cull_blurry_images(my_photos, threshold=110.0)
